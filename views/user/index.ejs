<% include header.ejs %>

  <main class="main">
    <div class="intro-slider-container">
      <div class="owl-carousel owl-simple owl-light owl-nav-inside" data-toggle="owl" data-owl-options='{
        "dots": true,
        "nav": false,
        "autoplay": true,
        "autoplayTimeout": 4000,
        "animateOut": "fadeOut"
    }'>
        <div class="intro-slide"
          style="background-image: url(/public/user/assets/images/demos/demo-2/slider/slide-1.jpg);">
          <div class="container intro-content">
            <h3 class="intro-subtitle">Bedroom Furniture</h3><!-- End .h3 intro-subtitle -->
            <h1 class="intro-title">Find Comfort <br>That Suits You.</h1><!-- End .intro-title -->

            <a href="category.html" class="btn btn-primary">
              <span>Shop Now</span>
              <i class="icon-long-arrow-right"></i>
            </a>
          </div><!-- End .container intro-content -->
        </div><!-- End .intro-slide -->

        <div class="intro-slide"
          style="background-image: url(/public/user/assets/images/demos/demo-2/slider/slide-2.jpg);">
          <div class="container intro-content">
            <h3 class="intro-subtitle">Deals and Promotions</h3><!-- End .h3 intro-subtitle -->
            <h1 class="intro-title">Ypperlig <br>Coffee Table <br><span class="text-primary"><sup>$</sup>49,99</span>
            </h1><!-- End .intro-title -->

            <a href="category.html" class="btn btn-primary">
              <span>Shop Now</span>
              <i class="icon-long-arrow-right"></i>
            </a>
          </div><!-- End .container intro-content -->
        </div><!-- End .intro-slide -->

        <div class="intro-slide"
          style="background-image: url(/public/user/assets/images/demos/demo-2/slider/slide-3.jpg);">
          <div class="container intro-content">
            <h3 class="intro-subtitle">Living Room</h3><!-- End .h3 intro-subtitle -->
            <h1 class="intro-title">
              Make Your Living Room <br>Work For You.<br>
              <span class="text-primary">
                <sup class="text-white font-weight-light">from</sup><sup>$</sup>9,99
              </span>
            </h1><!-- End .intro-title -->

            <a href="category.html" class="btn btn-primary">
              <span>Shop Now</span>
              <i class="icon-long-arrow-right"></i>
            </a>
          </div><!-- End .container intro-content -->
        </div><!-- End .intro-slide -->
      </div><!-- End .owl-carousel owl-simple -->

      <span class="slider-loader text-white"></span><!-- End .slider-loader -->
    </div><!-- End .intro-slider-container -->

    <div class="mb-3 mb-lg-5"></div><!-- End .mb-3 mb-lg-5 -->

    <div class="mb-3"></div><!-- End .mb-6 -->

    <div class="container">
      <ul class="nav nav-pills nav-border-anim nav-big justify-content-center mb-3" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="products-featured-link" data-toggle="tab" href="#products-featured-tab"
            role="tab" aria-controls="products-featured-tab" aria-selected="true">Mới nhất</a>
        </li>
      </ul>
    </div><!-- End .container -->

    <div class="container-fluid">
      <div class="tab-content tab-content-carousel">
        <div class="tab-pane p-0 fade show active" id="products-featured-tab" role="tabpanel"
          aria-labelledby="products-featured-link">
          <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
            data-owl-options='{
                                "nav": false, 
                                "dots": true,
                                "nav": false, 
                                "dots": true,
                                "margin": 20,
                                "loop": true,
                                "autoplay": true,
                                "autoplayTimeout": 1000,
                                "responsive": {
                                    "0": {
                                        "items":2
                                    },
                                    "480": {
                                        "items":2
                                    },
                                    "768": {
                                        "items":3
                                    },
                                    "992": {
                                        "items":4
                                    },
                                    "1200": {
                                        "items":5
                                    },
                                    "1600": {
                                        "items":6,
                                        "nav": true
                                    }
                                }
                            }'>
            <%products.forEach((product)=>{%>
              <div class="product product-11 text-center">
                <figure class="product-media">
                  <a href="/products/<%=product.category.slug%>/<%=product.productCode%>">
                    <img src="<%=product.images.at(0)%>" alt="Product image" class="product-image">
                    <img src="<%=product.images.at(-1)%>" alt="Product image" class="product-image-hover">
                  </a>

                  <div class="product-action-vertical">
                    <a href="#" class="btn-product-icon btn-wishlist"><span>add to wishlist</span></a>
                  </div><!-- End .product-action-vertical -->
                </figure><!-- End .product-media -->

                <div class="product-body">
                  <h3 class="product-title"><a href="/products/<%=product.category.slug%>/<%=product.productCode%>">
                      <%=product.title%>
                    </a></h3><!-- End .product-title -->
                  <div class="product-price">
                    <%=product.sizePrices.at(0).price%> - <%=product.sizePrices.at(-1).price%>
                  </div><!-- End .product-price -->
                </div><!-- End .product-body -->
                <div class="product-action">
                  <a href="/products/<%=product.category.slug%>/<%=product.productCode%>"
                    class="btn-product btn-cart"><span>Xem chi tiết</span></a>
                </div><!-- End .product-action -->
              </div><!-- End .product -->
              <%})%>
          </div><!-- End .owl-carousel -->
        </div><!-- .End .tab-pane -->
      </div><!-- End .tab-content -->
    </div><!-- End .container-fluid -->

    <div class="mb-5"></div><!-- End .mb-5 -->

    <div class="mb-6"></div><!-- End .mb-6 -->

    <div class="container">
      <div class="heading heading-center mb-3">
        <h2 class="title">Sản phẩm</h2><!-- End .title -->

        <ul class="nav nav-pills nav-border-anim justify-content-center" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="<%=categories[0].slug%>" data-toggle="tab"
              href="#href_<%=categories[0].slug%>" role="tab" aria-controls="<%=categories[0].slug%>"
              aria-selected="true">
              <%=categories[0].title%>
            </a>
          </li>
          <%for (let i=1; i < categories.length; i++) {%>
            <li class="nav-item">
              <a class="nav-link" id="<%=categories[i].slug%>" data-toggle="tab" href="#href_<%=categories[i].slug%>"
                role="tab" aria-controls="<%=categories[i].slug%>" aria-selected="false">
                <%=categories[i].title%>
              </a>
            </li>
            <%}%>
        </ul>
      </div><!-- End .heading -->

      <div class="tab-content">
        <div class="tab-pane p-0 fade show active" id="href_<%=categories[0].slug%>" role="tabpanel"
          aria-labelledby="<%=categories[0].slug%>">
          <div class="products">
            <div class="row justify-content-center">
              <%categories[0].products.slice(-10).forEach((product)=>{ %>
                <div class="col-6 col-md-4 col-lg-3 col-xl-5col">
                  <div class="product product-11 text-center">
                    <figure class="product-media">
                      <a href="/products/<%=categories[0].slug%>/<%=product.productCode%>">
                        <img src="<%=product.images.at(0)%>" alt="Product image" class="product-image">
                        <img src="<%=product.images.at(-1)%>" alt="Product image" class="product-image-hover">
                      </a>

                      <div class="product-action-vertical">
                        <a href="#" class="btn-product-icon btn-wishlist "><span>add to wishlist</span></a>
                      </div><!-- End .product-action-vertical -->
                    </figure><!-- End .product-media -->

                    <div class="product-body">
                      <div class="product-cat">
                        <a href="/products/<%=categories[0].slug%>">
                          <%=categories[0].title%>
                        </a>
                      </div><!-- End .product-cat -->
                      <h3 class="product-title"><a href="/products/<%=product.productCode%>">
                          <%=product.title%>
                        </a></h3>
                      <!-- End .product-title -->
                      <div class="product-price">
                        <%=product.sizePrices.at(0).price%> - <%=product.sizePrices.at(-1).price%>
                      </div><!-- End .product-price -->
                    </div><!-- End .product-body -->
                    <div class="product-action">
                      <a href="#" class="btn-product btn-cart"><span>Xem chi tiết</span></a>
                    </div><!-- End .product-action -->
                  </div><!-- End .product -->
                </div><!-- End .col-sm-6 col-md-4 col-lg-3 -->
                <%})%>
            </div><!-- End .row -->
          </div><!-- End .products -->
        </div><!-- .End .tab-pane -->
        <%for (let i=1; i < categories.length; i++) {%>
          <div class="tab-pane p-0 fade" id="href_<%=categories[i].slug%>" role="tabpanel"
            aria-labelledby="<%=categories[i].slug%>">
            <div class="products">
              <div class="row justify-content-center">
                <%categories[i].products.slice(-10).forEach((product)=>{ %>
                  <div class="col-6 col-md-4 col-lg-3 col-xl-5col">
                    <div class="product product-11 text-center">
                      <figure class="product-media">
                        <a href="/products/<%=categories[i].slug%>/<%=product.productCode%>">
                          <img src="<%=product.images.at(0)%>" alt="Product image" class="product-image">
                          <img src="<%=product.images.at(-1)%>" alt="Product image" class="product-image-hover">
                        </a>

                        <div class="product-action-vertical">
                          <a href="#" class="btn-product-icon btn-wishlist "><span>add to wishlist</span></a>
                        </div><!-- End .product-action-vertical -->
                      </figure><!-- End .product-media -->

                      <div class="product-body">
                        <div class="product-cat">
                          <a href="/products/<%=categories[i].slug%>">
                            <%=categories[i].title%>
                          </a>
                        </div><!-- End .product-cat -->
                        <h3 class="product-title"><a href="/products/<%=categories[i].slug%>/<%=product.productCode%>">
                            <%=product.title%>
                          </a></h3><!-- End .product-title -->
                        <div class="product-price">
                          <!-- <span class="new-price"> -->
                            <%=product.sizePrices.at(0).price%> - <%=product.sizePrices.at(-1).price%>
                          <!-- </span> -->
                        </div><!-- End .product-price -->
                      </div><!-- End .product-body -->
                      <div class="product-action">
                        <a href="#" class="btn-product btn-cart"><span>Xem chi tiết</span></a>
                      </div><!-- End .product-action -->
                    </div><!-- End .product -->
                  </div><!-- End .col-sm-6 col-md-4 col-lg-3 -->
                  <%})%>
              </div><!-- End .row -->
            </div><!-- End .products -->
          </div><!-- .End .tab-pane -->
          <%}%>
      </div><!-- End .tab-content -->
      <div class="more-container text-center mt-2">
        <a href="/products" class="btn btn-outline-darker btn-more"><span>Xem thêm</span><i
            class="icon-long-arrow-right"></i></a>
      </div><!-- End .more-container -->
    </div><!-- End .container -->
  </main><!-- End .main -->

  <% include footer.ejs %>